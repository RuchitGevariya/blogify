<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <%- include('./partials/navbar') %>
  </body>
  <div class="container my-4">
    <div class="row g-4">
      <% bloges.forEach(blog => { %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm">
            <img src="<%= blog.imagesUrl %>" class="card-img-top" alt="..." style="height: 200px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text text-truncate">
                <%= blog.description ? blog.description.substring(0, 100) + '...' : 'No description available.' %>
              </p>
              <a href="blog/<%= blog._id %>" class="btn btn-primary mt-auto">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
      
    </div>
  </div>
  
  <%- include('./partials/script') %>
</html>
